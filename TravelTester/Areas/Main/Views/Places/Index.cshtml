@model IEnumerable<TravelTester.Areas.Admin.Models.Place>

@{
    ViewBag.Title = "Index";
}

<section class="inner-banner">
    <div class="zt-container">
        <div class="box clearfix">
            <h2>Place</h2>
            <ul class="breadcumb">
                <li><span>Place</span></li>
            </ul>
        </div>
    </div>
</section>
<section class="popular-services sec-padding home-two">
    <div class="zt-container">
        <div class="row">
            @using (Html.BeginForm())
            {
                <div class="col-md-10">
                    <div class="form-group">
                        @Html.TextBox("SearchString", null, new { @class = "zt-control", placeholder = "Search places" })
                        <div class="input-icon">
                            <div class="input-addon"></div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2 col-sm-12 col-xs-12">
                    <div class="zt-flex zt-flex-center">
                        <button type="submit" class="btn zt-primary btn-lg btn-full">Search</button>
                    </div>
                </div>
            }
            @foreach (var item in Model)
            {
                <div class="col-md-4 col-sm-6 col-xs-6">
                    <div class="tour-list-box text-center zt-overlay zt-overlay-hover">
                        <div class="img-box position-relative">
                            <div class="zt-overlay-panel zt-overlay-background zt-overlay-slide-top zt-flex zt-flex-center zt-flex-middle text-center">
                                <a href="@Url.Action("Details", "Places", new { id=item.Id })" class="btn zt-default btn-lg">Detail</a>
                            </div>
                            <img src=" @Html.DisplayFor(modelItem => item.Images)" alt="" />
                        </div>
                        <div class="box-content">
                            <h3>  @Html.DisplayFor(modelItem => item.Title)</h3>
                            <div class="rating">
                                <span class="fa fa-star color-primary"></span>
                                <span class="fa fa-star color-primary"></span>
                                <span class="fa fa-star color-primary"></span>
                                <span class="fa fa-star color-primary"></span>
                                <span class="fa fa-star"></span>
                            </div>
                            <div class="driver"></div>
                            <span class="duration">@Html.DisplayFor(model => item.Localtion).ToString().Substring(0, 20) ...</span>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="pagination-wrap">
            <ul class="pagination">
                <li><a href="#">&laquo;</a></li>
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li class="active"><span class="">3</span></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
                <li><a href="#">&raquo;</a></li>
            </ul>
        </div>
    </div>
</section>
